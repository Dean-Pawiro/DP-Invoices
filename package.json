{
  "name": "dp-invoices",
  "version": "1.0.1",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm start --prefix frontend\" \"node backend/index.js\" \"electron .\"",
    "electron": "electron .",
    "build:react": "npm run build --prefix frontend",
    "build": "npm run build:react && electron-builder"
  },
  "build": {
    "appId": "com.invoice.app",
    "productName": "DP Invoices",
    "icon": "frontend/public/favicon.ico",
    "win": {
      "target": "portable",
      "icon": "frontend/public/favicon.ico"
    },
    "extraResources": [
      {
        "from": "backend",
        "to": "backend"
      },
      {
        "from": "backend/node_modules/sqlite3",
        "to": "backend/node_modules/sqlite3"
      },
      {
        "from": "backend/node_modules/bindings",
        "to": "backend/node_modules/bindings"
      },
      {
        "from": "backend/node_modules/file-uri-to-path",
        "to": "backend/node_modules/file-uri-to-path"
      },
      {
        "from": "frontend/build",
        "to": "frontend/build"
      }
    ]
  },
  "devDependencies": {
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0"
  }
}
